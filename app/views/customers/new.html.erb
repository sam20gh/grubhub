<br/><br/><br/>
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
    <div class="col-md-8 col-lg-6">
      <div class="login d-flex align-items-center py-5">
        <div class="container">
          <div class="row">
            <div class="col-md-9 col-lg-8 mx-auto">
            
               <% if flash[:errors]%>
               <div class="alert alert-danger" role="alert">
               <h3><%= "Error"%></h3>
              <ul>
              <% flash[:errors].each do |error|%>
              <li><%= error %></li>
              <% end %>
              </ul>
              </div>
              <% end %>
              
              <h1 class="login-heading mb-4">Join us.</h1>
                    <%= form_for :customer,  url: customers_path, :html => {class: 'form-group'} do |f|%>
                      <%= f.text_field :name,  placeholder: 'Name' %><br/><br/>
                      <%= f.text_field :username, placeholder: "username" %><br /><br/>
                      <%= f.text_field :dob, placeholder: "Date of Birth" %><br /><br/>
                      <%= f.text_area :bio, placeholder: "Bio" %><br /><br /><br/>
                      <%= f.submit "Create User!" , class: "btn btn-success"%><br /><br />
                    <% end %><br />
                    <%= link_to "Back to main!", customers_path, class: "btn btn-primary"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>